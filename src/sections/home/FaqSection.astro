    }

    .accordion .accordion-item button[aria-expanded="true"] {
      border-bottom: 1px solid var(--bg-blue-400);
    }

    .accordion button {
      position: relative;
      display: flex;
      text-align: left;
      width: 100%;
      padding: 0.5rem 0;
      font-size: 1.125rem;
      font-weight: 400;
      border: none;
