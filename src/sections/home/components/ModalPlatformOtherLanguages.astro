---
import CardImageHorizontal from "@/components/CardImageHorizontal.astro";
import Modal from "@/components/Modal.astro";
import VideoPlayer from "@/components/VideoPlayer.astro";
---

<Modal
  id="modal-platform-other-languages"
  title="Otros Idiomas"
  showButton={false}
  triggerElements={["course-shield-5"]}
  buttonExitClass="cs-btn cs-bg-blue-400 cs-color-white"
>
  <div class="conversacional-course-content-to-platform">
    <div class="conversacional-course-content-to-platform-video">
      <VideoPlayer
        src="/videos/horizontal-propa-3-optimizado.mp4"
        poster="poster-horizontal.png"
      />
    </div>

    <div class="conversacional-course-content-to-platform-cards">
      <CardImageHorizontal
        urlImage="/icons/icono-ingles-conversacional-up-optimizado.webp"
        title="Francés Conversacional"
        stylesCardContainer="margin-bottom: 0.5rem;"
        hrefUrl="https://virtual.capacitaringlesvirtual.tech/plataforma/course/view.php?id=14"
      />
      <CardImageHorizontal
        urlImage="/icons/icono-ingles-conversacional-up-optimizado.webp"
        title="Português Conversacional"
        stylesCardContainer="margin-bottom: 0.5rem;"
        hrefUrl="https://virtual.capacitaringlesvirtual.tech/plataforma/course/view.php?id=12"
      />
       <CardImageHorizontal
        urlImage="/icons/icono-ingles-conversacional-up-optimizado.webp"
        title="Italiano"
        stylesCardContainer="margin-bottom: 0.5rem;"
        hrefUrl="https://virtual.capacitaringlesvirtual.tech/plataforma/course/view.php?id=10"
      />
    </div>
  </div>
</Modal>
