---
import CardImageHorizontal from "@/components/CardImageHorizontal.astro";
import Modal from "@/components/Modal.astro";
import VideoPlayer from "@/components/VideoPlayer.astro";
---

<Modal
  id="modal-ingles-ninos"
  title="Inglés Para Niños"
  showButton={false}
  triggerElements={["course-shield-2"]}
  buttonExitClass="cs-btn cs-bg-blue-400 cs-color-white"
>
  <div class="conversacional-course-content-to-platform">
    <div class="conversacional-course-content-to-platform-video">
      <VideoPlayer
        src="/videos/horizontal-propa-3-optimizado.mp4"
        poster="poster-horizontal.png"
      />
    </div>

    <div class="conversacional-course-content-to-platform-cards">
      <CardImageHorizontal
        urlImage="/icons/icono-ingles-conversacional-up-optimizado.webp"
        title="Kindergarten"
        stylesCardContainer="margin-bottom: 0.5rem;"
        hrefUrl="https://virtual.capacitaringlesvirtual.tech/plataforma/course/view.php?id=5"
      />
      <CardImageHorizontal
        urlImage="/icons/icono-ingles-conversacional-up-optimizado.webp"
        title="Bilingual kids club"
        stylesCardContainer="margin-bottom: 0.5rem;"
        hrefUrl="https://virtual.capacitaringlesvirtual.tech/plataforma/course/view.php?id=4"
      />
      <CardImageHorizontal
        urlImage="/icons/icono-ingles-conversacional-up-optimizado.webp"
        title="Kids conversations"
        stylesCardContainer="margin-bottom: 0.5rem;"
        hrefUrl="https://virtual.capacitaringlesvirtual.tech/plataforma/course/view.php?id=2"
      />
    </div>
  </div>
</Modal>
