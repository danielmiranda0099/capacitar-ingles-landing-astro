---
import CourseBenefits from "@/components/heroSection/CourseBenefits.astro";
import CheckIcon from "@/components/icons/CheckIcon.astro";
import Modal from "@/components/Modal.astro";
const benefitsData = [
  {
    text: `Clases online en tiempo real con docentes expertos. Aprende desde
          cualquier lugar, sin contratos ni cláusulas. En 3 semestres o menos,
          habla inglés con seguridad y sin miedo.`,
    icon: CheckIcon,
  },
];
---

<Modal
  id="modal-virtual-english-with-live-classes"
  showButton={false}
  triggerElements={["card-virtual-english-with-live-classes"]}
  buttonExitClass="cs-btn cs-bg-blue-400 cs-color-white"
>
  <CourseBenefits
    title="INGLÉS VIRTUAL CON CLASES EN VIVO"
    description=`Aprende inglés virtualmente sin barreras, con docentes expertos y
      resultados garantizados.`
    benefits={benefitsData}
    whatsappLink="https://wa.me/573116771698?text=Hola,%20estoy%20interesado%20en..."
  />
</Modal>
