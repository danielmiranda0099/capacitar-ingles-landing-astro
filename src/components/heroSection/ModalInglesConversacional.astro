---
import CourseBenefits from "@/components/heroSection/CourseBenefits.astro";
import CheckIcon from "@/components/icons/CheckIcon.astro";
import Modal from "@/components/Modal.astro";
const benefitsData = [
  {
    title: "Conversación cotidiana",
    text: `Aprende inglés para situaciones cotidianas reales, con un enfoque
          práctico y natural. Ideal para comenzar a hablar con confianza en
          casa, el trabajo o la escuela.`,
    icon: CheckIcon,
  },
  {
    title: "Conversación interactiva",
    text: `Mejora tu comunicación en inglés en contextos comunes como
          entrevistas, reuniones y llamadas. Gana seguridad y fluidez para
          interactuar eficazmente en distintos entornos.`,
    icon: CheckIcon,
  },
  {
    title: "Conversación fluida",
    text: `Expresa ideas con naturalidad y claridad en cualquier situación.
          Supera bloqueos mentales y alcanza un dominio auténtico del inglés con
          confianza y soltura.`,
    icon: CheckIcon,
  },
  {
    title: "Conversación avanzada",
    text: `Mejora pronunciación, vocabulario y comprensión. Habla con fluidez en
          debates, entrevistas y presentaciones. Comunícate con precisión en
          estudios, viajes y trabajos en el exterior.`,
    icon: CheckIcon,
  },
];
---

<Modal
  id="modal-ingles-conversacional"
  showButton={false}
  triggerElements={["card-ingles-conversacional"]}
  buttonExitClass="cs-btn cs-bg-blue-400 cs-color-white"
>
  <CourseBenefits
    title="INGLÉS CONVERSACIONAL"
    description="Un curso de inglés completo, rápido y efectivo, diseñado para llevarte al bilingüismo en 4 ciclos."
    benefits={benefitsData}
    whatsappLink="https://wa.me/573116771698?text=Hola,%20estoy%20interesado%20en..."
  />
</Modal>
