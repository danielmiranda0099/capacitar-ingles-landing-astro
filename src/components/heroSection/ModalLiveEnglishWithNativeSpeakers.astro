---
import CourseBenefits from "@/components/heroSection/CourseBenefits.astro";
import CheckIcon from "@/components/icons/CheckIcon.astro";
import Modal from "@/components/Modal.astro";
const benefitsData = [
  {
    text: `Inmersión conversacional, Practica inglés en reuniones en vivo, 100%
          en inglés, dirigida por una docente nativa de EE.UU. Ideal para
          docentes, estudiantes y profesionales que buscan fluidez, confianza y
          naturalidad al hablar.`,
    icon: CheckIcon,
  },
];
---

<Modal
  id="modal-live-english-with-native-speakers"
  showButton={false}
  triggerElements={["card-live-english-with-native-speakers"]}
  buttonExitClass="cs-btn cs-bg-blue-400 cs-color-white"
>
  <CourseBenefits
    title="INGLÉS EN VIVO CON NATIVOS"
    description=` Más que un curso, perfecciona tu inglés con la comunidad bilingüe dirigida
      por nativos, práctica real de inglés con docente nativa, ¡habla con
      confianza!`
    benefits={benefitsData}
    whatsappLink="https://wa.me/573116771698?text=Hola,%20estoy%20interesado%20en..."
  />
</Modal>
