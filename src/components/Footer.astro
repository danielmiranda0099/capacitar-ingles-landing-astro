---
import MapPinIcon from "./icons/MapPinIcon.astro";
import PhoneIcon from "./icons/PhoneIcon.astro";
import InstagramIcon from "./icons/InstagramIcon.astro";
import FacebookIcon from "./icons/FacebookIcon.astro";
import EmailIcon from "./icons/EmailIcon.astro";
import ClockIcon from "./icons/ClockIcon.astro";
---

<footer>
  <div class="footer-logo">
    <img src="/logo.png" />
    <div class="slogan">
      <h2 class="cs-text-3xl cs-bold">
        Instituto de Ingl√©s, otros Idiomas y Artes
      </h2>
      <h2 class="cs-text-2xl cs-bold">CAPACITAR</h2>
    </div>
  </div>

  <div class="footer-info">
    <div>
      <PhoneIcon /> (+57) 321 5387123
    </div>

    <div>
      <MapPinIcon /> Cra. 13a #24 A 28, Sincelejo, Sucre
    </div>
    <div>
      <EmailIcon /> capacitar@gmail.com
    </div>
    <div>
      <ClockIcon /> Lunes a sabado de 8:00am a 6:00pm
    </div>
  </div>

  <div class="footer-social">
    <div>
      <FacebookIcon className="w-2rem h-2rem" />
    </div>
    <div>
      <InstagramIcon className="w-2rem h-2rem" />
    </div>
  </div>
</footer>

<style>
  footer {
    display: flex;
    justify-content: space-evenly;
    height: fit-content;
    width: 100%;
    background-color: var(--bg-blue-700);
    padding: 3rem 2rem;

    .footer-logo {
      width: fit-content;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      gap: 0.5rem;

      & .slogan {
        display: flex;
        flex-direction: column;

        h2 {
          text-align: center;
          color: white;
          font-family: "Nista", "Times New Roman", Times, serif;
          font-weight: 900;
        }
      }
    }

    .footer-info {
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
      color: white;

      div {
        display: flex;
        gap: 1rem;
      }
    }

    .footer-social {
      display: flex;
      gap: 1.5rem;
      & div {
        width: 3.5rem;
        height: 3.5rem;
        display: flex;
        justify-content: center;
        align-items: center;
        aspect-ratio: 1;
        background-color: white;
        padding: 0.8rem;
        border-radius: 100%;
      }
    }

    .w-2rem {
      width: 2rem;
      height: 2rem;
    }
  }
</style>
