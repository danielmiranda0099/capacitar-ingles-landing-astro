<style>
  .breakpoint-indicator {
    position: fixed;
    bottom: 1rem;
    right: 1rem;
    background: rgba(0, 0, 0, 0.7);
    color: white;
    font-size: 1rem;
    padding: 0.5rem 1rem;
    border-radius: 0.5rem;
    font-family: sans-serif;
    z-index: 9999;
    pointer-events: none;
  }
</style>

<div class="breakpoint-indicator" id="breakpoint-indicator">--</div>

<script>
  function getBreakpoint() {
    const width = window.innerWidth;
    if (width <= 480) return `1 - ${width} <= 480`;
    if (width <= 576) return `2 - ${width} <= 576`;
    if (width <= 768) return `3 - ${width} <= 768`;
    if (width <= 1024) return `4 - ${width} <= 1024`;
    if (width <= 1400) return `5 - ${width} <= 1400`;
    return `6 - ${width} > 1400`;
  }

  function updateIndicator() {
    const indicator = document.getElementById('breakpoint-indicator');
    if (indicator) {
      indicator.textContent = getBreakpoint();
    }
  }

  window.addEventListener('resize', updateIndicator);
  window.addEventListener('DOMContentLoaded', updateIndicator);
</script>
