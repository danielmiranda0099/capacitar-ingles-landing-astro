<style>
  .float {
    position: fixed;
    width: 4rem;
    height: 4rem;
    bottom: 2rem;
    right: 1rem;
    background-color: #25d366;
    border-radius: 50%;
    text-align: center;
    color: white;
    z-index: 99;
    display: flex;
    justify-content: center;
    align-items: center;
    --tw-shadow: 0 0 5px 0 rgba(36, 48, 48, 0.5),
      0 2px 7px 0 rgba(36, 48, 48, 0.5), 0 4px 4px -2px rgba(36, 48, 48, 0.5);
    box-shadow: var(--tw-shadow);
    transition: transform 0.5s ease;

    &:hover {
      transform: scale(1.1);
    }
  }
</style>
