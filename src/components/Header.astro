---
import MenuIcon from "./icons/MenuIcon.astro";
---

<header>
  <div class="header">
    <div class="logo-container">
      <img src="/logo.png" />
      <h2 class="cs-text-4xl cs-bold">Capacitar</h2>
    </div>
    <div class="options-container">
      <a class="cs-btn cs-bg-green-wh cs-color-white" href="#">whatsapp</a>
      <MenuIcon />
    </div>
  </div>
</header>

<style>
  header {
    background-color: var(--bg-white);
  }
  .header {
    display: flex;
    height: 90px;
    max-width: 180ch;
    padding: 1rem 0;
    margin: 0 auto;
    justify-content: space-between;
    align-items: center;

    .logo-container {
      display: flex;
      align-items: center;
      gap: 1rem;
      height: 100%;
      img {
        height: 140%;
      }
      h2 {
        font-family: 'Nista', 'Times New Roman', Times, serif;
        font-weight: 900;
      }
    }

    .options-container {
      display: flex;
      align-items: center;
      gap: 1rem;
    }
  }
</style>
